@page "/transacoes/editar/{Id:int}"
@attribute [Authorize]
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject MudBlazor.ISnackbar Snackbar

@code {
    [Parameter]
    public int Id { get; set; }

    TransacaoDto transacao = new();
    List<UsuarioDto>? usuarios;
    List<CategoriaDto>? categorias;

    protected override async Task OnInitializedAsync()
    {
        var responseTransacao = await Http.GetAsync($"/api/Transacoes/{Id}");
        if (responseTransacao.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        if (responseTransacao.IsSuccessStatusCode)
        {
            transacao = await responseTransacao.Content.ReadFromJsonAsync<TransacaoDto>() ?? new TransacaoDto();
        }

        var responseUsuarios = await Http.GetAsync("/api/Usuario");
        if (responseUsuarios.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        if (responseUsuarios.IsSuccessStatusCode)
        {
            usuarios = await responseUsuarios.Content.ReadFromJsonAsync<List<UsuarioDto>>();
        }

        var responseCategorias = await Http.GetAsync("/api/Categoria");
        if (responseCategorias.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        if (responseCategorias.IsSuccessStatusCode)
        {
            categorias = await responseCategorias.Content.ReadFromJsonAsync<List<CategoriaDto>>();
        }
    }

    async Task HandleValidSubmit()
    {
        var res = await Http.PutAsJsonAsync($"/api/Transacoes/{Id}", transacao);
        if (res.IsSuccessStatusCode)
        {
            Snackbar.Add("Transação atualizada com sucesso.", MudBlazor.Severity.Success);
            NavigationManager.NavigateTo("/transacoes");
        }
        else
        {
            var text = await res.Content.ReadAsStringAsync();
            Snackbar.Add("Erro: " + text, MudBlazor.Severity.Error);
        }
    }

    void Cancel() => NavigationManager.NavigateTo("/transacoes");

    [Inject]
    private IJSRuntime JS { get; set; } = default!;

    class TransacaoDto { public int Id { get; set; } public decimal Valor { get; set; } public DateTime Data { get; set; } public string? Tipo { get; set; } public string? Descricao { get; set; } public int UsuarioId { get; set; } public int CategoriaId { get; set; } }
    class UsuarioDto { public int Id { get; set; } public string Nome { get; set; } = string.Empty; public string Email { get; set; } = string.Empty; }
    class CategoriaDto { public int Id { get; set; } public string Nome { get; set; } = string.Empty; }
}

<h3>Editar Transação</h3>

<EditForm Model="transacao" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Valor</label>
        <InputNumber class="form-control" @bind-Value="transacao.Valor" />
    </div>
    <div class="mb-3">
        <label class="form-label">Data</label>
        <InputDate class="form-control" @bind-Value="transacao.Data" />
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <InputSelect class="form-select" @bind-Value="transacao.Tipo">
            <option value="Receita">Receita</option>
            <option value="Despesa">Despesa</option>
        </InputSelect>
    </div>
    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <InputText class="form-control" @bind-Value="transacao.Descricao" />
    </div>
    <div class="mb-3">
        <label class="form-label">Usuário</label>
        <select class="form-select" @bind="transacao.UsuarioId">
            <option value="">-- selecione --</option>
            @if (usuarios != null)
            {
                @foreach (var u in usuarios)
                {
                    <option value="@u.Id">@u.Nome (@u.Email)</option>
                }
            }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Categoria</label>
        <select class="form-select" @bind="transacao.CategoriaId">
            <option value="">-- selecione --</option>
            @if (categorias != null)
            {
                @foreach (var c in categorias)
                {
                    <option value="@c.Id">@c.Nome</option>
                }
            }
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Salvar</button>
    <button class="btn btn-secondary ms-2" type="button" @onclick="Cancel">Cancelar</button>
</EditForm>
