@page "/transacoes"
@using System.Net.Http.Json
@using ControleDespesas.Models
@using MudBlazor
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<h3>Transações</h3>

<div class="mb-3 d-flex align-items-end gap-2">
    <div>
        <label class="form-label">Data de Início</label>
        <InputDate class="form-control" @bind-Value="startDate" />
    </div>
    <div>
        <label class="form-label">Data Final</label>
        <InputDate class="form-control" @bind-Value="endDate" />
    </div>
    <div>
        <label class="form-label">Categoria</label>
        <select class="form-select" @bind="selectedCategoriaId">
            <option value="0">Todas</option>
            @if (categorias != null)
            {
                @foreach (var c in categorias)
                {
                    <option value="@c.Id">@c.Nome</option>
                }
            }
        </select>
    </div>
    <div>
        <button class="btn btn-primary" @onclick="ApplyFilters">Aplicar</button>
        <button class="btn btn-secondary ms-2" @onclick="ClearFilters">Limpar</button>
    </div>
</div>

<button class="btn btn-primary mb-3" @onclick="Create">Nova Transação</button>

@if (transacoes is null)
{
    <p>Carregando...</p>
}
else
{
    <div class="mb-3">
        <div class="card">
            <div class="card-body d-flex gap-3">
                <div>
                    <small class="text-muted">Receitas</small>
                    <div class="h5">@totalReceitas.ToString("C")</div>
                </div>
                <div>
                    <small class="text-muted">Despesas</small>
                    <div class="h5">@totalDespesas.ToString("C")</div>
                </div>
                <div>
                    <small class="text-muted">Saldo</small>
                    <div class="h4" style="color:@(saldo < 0 ? "red" : "green")">@saldo.ToString("C")</div>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Valor</th>
                <th>Data</th>
                <th>Tipo</th>
                <th>Categoria</th>
                <th>Usuário</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in transacoes)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Valor.ToString("C")</td>
                    <td>@t.Data.ToString("dd-MM-yyyy")</td>
                    <td>@t.Tipo</td>
                    <td>@t.CategoriaNome</td>
                    <td>@t.UsuarioEmail</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1" @onclick="() => Details(t.Id)">Detalhes</button>
                        <button class="btn btn-sm btn-warning me-1" @onclick="() => Edit(t.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(t.Id)">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TransacaoDto>? transacoes;
    private List<Categoria>? categorias;

    // Date inputs as nullable DateTime
    private DateTime? startDate;
    private DateTime? endDate;
    private int selectedCategoriaId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategoriasAsync();
        await LoadTransacoesAsync();
    }

    private async Task LoadCategoriasAsync()
    {
        try
        {
            categorias = await Http.GetFromJsonAsync<List<Categoria>>("api/Categoria");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao carregar categorias: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadTransacoesAsync()
    {
        try
        {
            var query = new List<string>();
            if (startDate.HasValue)
            {
                query.Add($"startDate={Uri.EscapeDataString(startDate.Value.ToString("yyyy-MM-dd"))}");
            }
            if (endDate.HasValue)
            {
                query.Add($"endDate={Uri.EscapeDataString(endDate.Value.ToString("yyyy-MM-dd"))}");
            }
            if (selectedCategoriaId > 0)
            {
                query.Add($"categoriaId={selectedCategoriaId}");
            }

            var url = "api/Transacoes" + (query.Count > 0 ? "?" + string.Join("&", query) : string.Empty);
            transacoes = await Http.GetFromJsonAsync<List<TransacaoDto>>(url);
            // Recalculate totals whenever the transactions list is loaded/updated
            CalculateTotals();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao carregar transações: {ex.Message}", Severity.Error);
        }
    }

    private async Task ApplyFilters()
    {
        await LoadTransacoesAsync();
    }

    private async Task ClearFilters()
    {
        startDate = null;
        endDate = null;
        selectedCategoriaId = 0;
        await LoadTransacoesAsync();
    }

    void Create() => NavigationManager.NavigateTo("/transacoes/criar");
    void Edit(int id) => NavigationManager.NavigateTo($"/transacoes/editar/{id}");
    void Details(int id) => NavigationManager.NavigateTo($"/transacoes/detalhes/{id}");

    async Task Delete(int id)
    {
        if (!await JSConfirm($"Excluir transação {id}?")) return;
        var res = await Http.DeleteAsync($"api/Transacoes/{id}");
        if (res.IsSuccessStatusCode)
        {
            transacoes = transacoes?.Where(t => t.Id != id).ToList();
            StateHasChanged();
            CalculateTotals();
            Snackbar.Add("Transação excluída com sucesso.", Severity.Success);
        }
        else
        {
            Snackbar.Add("Erro ao excluir transação.", Severity.Error);
        }
    }

    [Inject]
    private IJSRuntime JS { get; set; } = default!;

    async Task<bool> JSConfirm(string message) => await JS.InvokeAsync<bool>("confirm", message);

    class TransacaoDto { public int Id { get; set; } public decimal Valor { get; set; } public DateTime Data { get; set; } public string? Tipo { get; set; } public int CategoriaId { get; set; } public string? CategoriaNome { get; set; } public int UsuarioId { get; set; } public string? UsuarioEmail { get; set; } public string? Descricao { get; set; } }

    // Totals
    private decimal totalReceitas = 0m;
    private decimal totalDespesas = 0m;
    private decimal saldo = 0m;

    private void CalculateTotals()
    {
        if (transacoes == null || !transacoes.Any())
        {
            totalReceitas = 0m;
            totalDespesas = 0m;
            saldo = 0m;
            return;
        }

        // Assume Tipo == "Despesa" indicates expense; anything else counts as receita
        totalReceitas = transacoes.Where(t => string.IsNullOrWhiteSpace(t.Tipo) || !t.Tipo.Equals("Despesa", StringComparison.OrdinalIgnoreCase)).Sum(t => t.Valor);
        totalDespesas = transacoes.Where(t => t.Tipo != null && t.Tipo.Equals("Despesa", StringComparison.OrdinalIgnoreCase)).Sum(t => t.Valor);
        saldo = totalReceitas - totalDespesas;
    }
}
