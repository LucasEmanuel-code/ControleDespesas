@page "/login"
@attribute [AllowAnonymous]
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Forms
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject MudBlazor.ISnackbar Snackbar

<h3>Login</h3>

<EditForm Model="model" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="model.Email" />
    </div>
    <div class="mb-3">
        <label class="form-label">Senha</label>
        <InputText type="password" class="form-control" @bind-Value="model.Senha" />
    </div>

    <button class="btn btn-primary" type="submit">Entrar</button>
    <button class="btn btn-link ms-2" type="button" @onclick="GoRegister">Registrar</button>
</EditForm>

@code {
    private LoginModel model = new();

    private async Task HandleLogin()
    {
        try
        {
            var res = await Http.PostAsJsonAsync("api/Usuario/login", model);
            if (res.IsSuccessStatusCode)
            {
                Snackbar.Add("Login realizado com sucesso.", MudBlazor.Severity.Success);
                NavigationManager.NavigateTo("/transacoes");
            }
            else
            {
                var text = await res.Content.ReadAsStringAsync();
                Snackbar.Add($"Erro ao efetuar login: {text}", MudBlazor.Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro: {ex.Message}", MudBlazor.Severity.Error);
        }
    }

    private void GoRegister() => NavigationManager.NavigateTo("/register");

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Senha { get; set; } = string.Empty;
    }
}
