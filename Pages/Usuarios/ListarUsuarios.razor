@page "/usuarios"
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h3>Usuários</h3>

@if (usuarios is null)
{
    <p>Carregando...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in usuarios)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Nome</td>
                    <td>@u.Email</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1" @onclick="() => Details(u.Id)">Detalhes</button>
                        <button class="btn btn-sm btn-warning me-1" @onclick="() => Edit(u.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(u.Id)">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<UsuarioDto>? usuarios;

    protected override async Task OnInitializedAsync()
    {
        usuarios = await Http.GetFromJsonAsync<List<UsuarioDto>>("/api/Usuario");
    }

    void Edit(int id) => NavigationManager.NavigateTo($"/usuarios/editar/{id}");
    void Details(int id) => NavigationManager.NavigateTo($"/usuarios/detalhes/{id}");

    async Task Delete(int id)
    {
        if (!await JSConfirm($"Excluir usuário {id}?")) return;
        var res = await Http.DeleteAsync($"/api/Usuario/{id}");
        if (res.IsSuccessStatusCode)
        {
            usuarios = usuarios?.Where(u => u.Id != id).ToList();
            StateHasChanged();
        }
        else
        {
            // opcional: mostrar erro simples
            await ShowAlert("Erro ao excluir usuário.");
        }
    }

    // tiny interop-free helpers using browser confirm via JSRuntime
    [Inject]
    private IJSRuntime JS { get; set; } = default!;

    async Task<bool> JSConfirm(string message) => await JS.InvokeAsync<bool>("confirm", message);
    async Task ShowAlert(string message) => await JS.InvokeVoidAsync("alert", message);

    class UsuarioDto { public int Id { get; set; } public string Nome { get; set; } = string.Empty; public string Email { get; set; } = string.Empty; }
}
