@page "/categorias/criar"
@attribute [Authorize]
@using System.Net.Http.Json
@using ControleDespesas.Models
@using MudBlazor
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<h3>Criar Categoria</h3>

<EditForm Model="categoria" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <InputText class="form-control" @bind-Value="categoria.Nome" />
    </div>
    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <InputText class="form-control" @bind-Value="categoria.Descricao" />
    </div>
    <div class="mb-3">
        <label class="form-label">Usuário</label>
        <select class="form-select" @bind="categoria.UsuarioId">
            <option value="">-- selecione --</option>
            @if (usuarios != null)
            {
                @foreach (var u in usuarios)
                {
                    <option value="@u.Id">@u.Nome (@u.Email)</option>
                }
            }
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Criar</button>
    <button class="btn btn-secondary ms-2" type="button" @onclick="Cancel">Cancelar</button>
</EditForm>

@code {
    private Categoria categoria = new();
    private List<Usuario>? usuarios;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Http.GetAsync("api/Usuario");
            if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                NavigationManager.NavigateTo("/login");
                return;
            }
            if (response.IsSuccessStatusCode)
            {
                usuarios = await response.Content.ReadFromJsonAsync<List<Usuario>>();
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao carregar usuários: {ex.Message}", Severity.Error);
        }
    }

    private async Task HandleValidSubmit()
    {
        if (categoria.UsuarioId == 0)
        {
            Snackbar.Add("Por favor, selecione um usuário", Severity.Warning);
            return;
        }

        try 
        {
            var res = await Http.PostAsJsonAsync("api/Categoria", categoria);
            if (res.IsSuccessStatusCode)
            {
                Snackbar.Add("Categoria criada com sucesso.", Severity.Success);
                NavigationManager.NavigateTo("/categorias");
            }
            else
            {
                var errorText = await res.Content.ReadAsStringAsync();
                Snackbar.Add($"Erro ao criar categoria: {errorText}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao criar categoria: {ex.Message}", Severity.Error);
        }
    }

    private void Cancel() => NavigationManager.NavigateTo("/categorias");
}